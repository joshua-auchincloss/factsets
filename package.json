{
	"name": "factsets",
	"description": "An MCP server that provides a local, persistent, self-maintaining knowledge base for AI agents",
	"version": "0.2.0",
	"license": "MIT",
	"module": "src/main.ts",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"type": "module",
	"keywords": [
		"ai",
		"mcp",
		"agent",
		"sqlite",
		"knowledge-base",
		"model-context-protocol"
	],
	"mcpName": "io.github.joshua-auchincloss/factsets",
	"authors": [
		{
			"name": "Joshua Auchincloss",
			"email": "joshua.auchincloss@proton.me"
		}
	],
	"repository": {
		"url": "https://github.com/joshua-auchincloss/factsets"
	},
	"scripts": {
		"clean": "rm -rf ./dist",
		"build": "tsc -p tsconfig.build.json",
		"bundle": "bun run build:bundle",
		"build:bundle": "node scripts/bundle.mjs",
		"dist": "bun run clean && bun run build && bun run bundle && bun run copy-assets",
		"copy-assets": "node scripts/copy-assets.mjs",
		"inspect": "bunx @modelcontextprotocol/inspector bun ./src/main.ts",
		"e2e": "bash scripts/e2e_test.sh",
		"format": "biome format --write",
		"lint": "biome lint",
		"migrations": "drizzle-kit generate",
		"typecheck": "tsc --noEmit",
		"pre-test": "bun scripts/pre-test.ts"
	},
	"bin": {
		"factsets": "bin/factsets"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/axios": "^0.14.4",
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"@types/semver": "^7.7.1",
		"@types/turndown": "^5.0.6",
		"axios": "^1.13.2",
		"bun": "^1.3.5",
		"drizzle-kit": "^1.0.0-beta.3",
		"esbuild": "^0.27.2",
		"prettier": "^3.7.4",
		"semver": "^7.7.3"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"files": [
		"src/**/*",
		"bin/**/*",
		"dist/**/*"
	],
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@optique/core": "^0.8.1",
		"@optique/run": "^0.8.1",
		"better-sqlite3": "^12.5.0",
		"dayjs": "^1.11.19",
		"drizzle-orm": "^1.0.0-beta.3",
		"libsql": "^0.5.22",
		"turndown": "^7.2.2",
		"zod": "3",
		"zod-to-json-schema": "^3.25.0"
	}
}
