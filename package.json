{
	"name": "factsets",
	"version": "0.1.1",
	"license": "MIT",
	"module": "src/main.ts",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"type": "module",
	"authors": [
		{
			"name": "Joshua Auchincloss",
			"email": "joshua.auchincloss@proton.me"
		}
	],
	"repository": {
		"url": "https://github.com/joshua-auchincloss/factsets"
	},
	"scripts": {
		"clean": "rm -rf ./dist",
		"build": "tsc -p tsconfig.build.json",
		"bundle": "bun run build:bundle",
		"build:bundle": "node scripts/bundle.mjs",
		"dist": "bun run clean && bun run build && bun run bundle && bun run copy-assets",
		"copy-assets": "node scripts/copy-assets.mjs",
		"inspect": "bunx @modelcontextprotocol/inspector bun ./src/main.ts",
		"e2e": "bash scripts/e2e_test.sh",
		"format": "biome format --write",
		"lint": "biome lint",
		"migrations": "drizzle-kit generate"
	},
	"bin": {
		"factsets": "bin/factsets"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"drizzle-kit": "^1.0.0-beta.3",
		"esbuild": "^0.27.2",
		"prettier": "^3.7.4"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"files": [
		"bin/**/*",
		"dist/**/*"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@libsql/client": "^0.15.15",
		"@optique/core": "^0.8.1",
		"@optique/run": "^0.8.1",
		"better-sqlite3": "^12.5.0",
		"dayjs": "^1.11.19",
		"drizzle-orm": "^1.0.0-beta.3",
		"libsql": "^0.5.22",
		"vite": "^7.3.0",
		"zod": "3"
	}
}
