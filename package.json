{
	"name": "factsets",
	"version": "0.0.1",
	"license": "MIT",
	"module": "src/main.ts",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"type": "module",
	"scripts": {
		"clean": "rm -rf ./dist",
		"build": "tsc -p tsconfig.build.json",
		"dist": "bun run clean && bun run build && bun run copy-assets",
		"copy-assets": "cp -rL src/db/migrations dist/db/ && cp -L src/prompts/*.md dist/prompts/",
		"inspect": "bunx @modelcontextprotocol/inspector bun ./src/main.ts",
		"e2e": "bun test && bun dist && bin/factsets mcp-server --dry",
		"format": "biome format --write",
		"lint": "biome lint",
		"migrations": "drizzle-kit generate"
	},
	"bin": {
		"factsets": "bin/factsets"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"better-sqlite3": "^12.5.0",
		"drizzle-kit": "^1.0.0-beta.3",
		"prettier": "^3.7.4"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"files": [
		"src/**/*"
	],
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@optique/core": "^0.8.1",
		"@optique/run": "^0.8.1",
		"dayjs": "^1.11.19",
		"drizzle-orm": "^1.0.0-beta.3",
		"libsql": "^0.5.22",
		"vite": "^7.3.0",
		"zod": "3"
	}
}
